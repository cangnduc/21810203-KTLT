@page
@model _21810203.Pages.viewLHModel
@{
}
<table class ="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Expiration</th>
                <th>Category</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
           
            @foreach(var product in @Model.CuaHang)
            {
                if(product.name == Model.LoaiHang) {
                    foreach(var item in product.dsach)
                {
                    if(@item.isDeleted == false) {
                    <tr>
                         <th>@item.id</th>
                         <th>@item.name</th>
                         <th>@item.quantity</th>
                         <th>@item.price</th>
                         <th>@item.Expiration.ToShortDateString()</th>
                         <th>@product.name</th>
                         <th>
                             <a href ="/Edit-Product?id=@item.id&name=@product.name" class = "btn-primary btn">Edit</a>
                             <a href ="/delete-product?id=@item.id&name=@product.name" class = "btn-danger btn">Delete</a>
                         </th>

                    </tr>}
                }
                }
                
               
            }
           
        </tbody>
    </table>