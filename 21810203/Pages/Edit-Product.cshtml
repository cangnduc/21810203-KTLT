@page
@model _21810203.Pages.Edit_ProductModel
@{
}
<form method = 'post'>
	<div class = 'form-row'>
		<div class="form-group col-md-4 mb-2">
			<input name="pid" type="text" readonly class="form-control" value="" placeholder="@Model.id">
		</div>
		<div class="form-group col-md-4 mb-2">
			<input name="prod_name" type="text" class="form-control" value="" placeholder="@Model.product.name">
		</div>
		<div class="form-group col-md-4 mb-2">
			<input name="prod_price" type="text" class="form-control" value="" placeholder="@Model.product.price">
		</div>
		<div class="form-group col-md-4 mb-2">
			<label class = 'mb-2'> Expiration Date</label>
			<input name="prod_date" value ='@Model.product.Expiration'  type="date" class="form-control"/>
		</div>
		<div class="form-group col-md-4 mb-2">
			<select name ='ProductsName' class = 'form-control'>
					@if(Model.CuaHang != null)
					{
						foreach(var product in Model.CuaHang) {
							if(@Model.name == product.name)
							{
								<option selected>@product.name</option>
							}
						else {<option>@product.name</option>}
						}
					}
					
			</select>
			
			
		</div>
		<div class="form-group col-md-4 mb-2">
			
			<input  type="submit" value = 'Luu' class="btn btn-primary"/>
		</div>
	</div>
	@Model.thongbao
</form>