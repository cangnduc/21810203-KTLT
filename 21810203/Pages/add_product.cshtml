@page
@model _21810203.Pages.addproductModel
@{
}
<div class = 'container'>
<h2>Add Product</h2>

<form method = 'post'>
	<div class = 'form-row'>
		<div class="form-group col-md-4 mb-2">
			<input name="id" type="text" readonly class="form-control" value="" placeholder="ID">
		</div>
		<div class="form-group col-md-4 mb-2">
			<input name="prod_name" type="text" class="form-control" value="" placeholder="Product name">
		</div>
		<div class="form-group col-md-4 mb-2">
			<input name="prod_price" type="text" class="form-control" value="" placeholder="Price">
		</div>
		<div class="form-group col-md-4 mb-2">
			<label class = 'mb-2'> Expiration Date</label>
			<input name="prod_date"  type="date" class="form-control"/>
		</div>
		<div class="form-group col-md-4 mb-2">
			<select name ='ProductsName' class = 'form-control'>
					@if(Model.CuaHang != null)
					{
						foreach(var product in Model.CuaHang) {
					<option>@product.name</option>
						}
					}
					
			</select>
			
			
		</div>
		<div class="form-group col-md-4 mb-2">
			
			<input  type="submit" value = 'Luu' class="btn btn-primary"/>
		</div>
	</div>
</form>
@Model.thongbao
</div>